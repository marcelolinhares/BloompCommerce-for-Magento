<?xml version="1.0"?> 
<config> 
    <modules> 
        <APLegg_Bloompa> 
            <version>1.0.0</version> 
        </APLegg_Bloompa> 
    </modules> 
    <global> 
		<rewrite> 
			<bloompa> 
				<from><![CDATA[#^/checkout/cart#]]></from> 
				<to>/Bloompa/checkout_cart</to> 
			</bloompa> 
		</rewrite> 
		<rewrite> 
			<bloompa> 
				<from><![CDATA[#^/bloompcommerce#]]></from> 
				<to>/Bloompa/bloompa_bloompa</to> 
			</bloompa> 
		</rewrite> 
    </global> 
    <frontend> 
        <routers> 
            <bloompa> 
                <use>standard</use> 
                <args> 
                    <module>APLegg_Bloompa</module> 
                    <frontName>Bloompa</frontName> 
                </args> 
            </bloompa> 
        </routers> 
        <layout>
            <updates>
                <bloompa>
                    <file>bloompa.xml</file>
                </bloompa>
            </updates>
        </layout>
    </frontend> 
	<admin>
        <routers>
			<bloompa>
				<use>admin</use>
				<args>
					<module>APLegg_Bloompa</module>
					<frontName>Bloompa</frontName>
				</args>
			</bloompa>
        </routers>
    </admin>
    <adminhtml>
		<menu>
			<bloompa module="mtslideshow">
				<title>Bloompa</title>
				<sort_order>71</sort_order>               
				<children>
					<items module="mtslideshow">
						<title>Configurar</title>
						<sort_order>0</sort_order>
						<action>mtslideshow/adminhtml_mtslideshow</action>
					</items>
				</children>
			</bloompa>
		</menu>
		<acl>
			<resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <bloompa>
                                            <title>Bloompa</title>
                                        </bloompa>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
		</acl>
    </adminhtml>   
</config> 